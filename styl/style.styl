@import	'nib/vendor'
@import 'normalize.styl'

body
	background #88BC40

section 
	margin 70px auto
	text-align center
	width 650px
	a 
		background-color #ededed
		border-radius 50%
		color #444		
		font-size 5em
		line-height 60px 
		padding-bottom 12px 
		position relative
		text-decoration none
		width 72px 
		z-index 2
		&:hover
			color black
			background-color #CDCDCD


	a, #marco
		display inline-block
		vertical-align middle

#siguiente
		left -35px
		&:hover
			left -25px

#anterior
		right -35px
		&:hover 
			right -25px

#marco
	border 10px solid white
	border-radius 4px 
	box-shadow 0px 0px 25px 5px rgba(0,0,0,0.3)
	overflow hidden
	width 464px
	position relative
	z-index 5
	ul 
		margin 0
		padding 0
		position relative
		width 1200px 
	li 
		border 1px solid red
		background-color #88BC40
		float left
		font-size 30px
		height 167px
		line-height 167px
		list-style none
		margin 0
		position relative
		width 230px
		img
			height 167px
			width 230px
